<div class='card my-3'>
  <h5 class='card-header'>ระบุตัวตน (Authentication)</h5>
  <div class='card-body'>
    <div class='d-flex justify-content-between align-items-center'>
      <div>
        <ul class='list-group list-group-horizontal'>
          <li class='list-group-item'>Method:
            <span class='badge text-bg-info text-light'>POST</span>
          </li>

          <li class='list-group-item'>URL:
            <a href='/users/auth' class='text-decoration-none'>/users/auth</a>
          </li>
          <li class='list-group-item'>
            Response: JSON
          </li>
        </ul>
      </div>

      {{! View response }}
      <div>
        <button
          class='btn btn-sm btn-primary'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#sampleAuth'
          aria-expanded='false'
          aria-controls='sampleAuth'
        >ตัวอย่าง</button>
      </div>
    </div>

    <div class='mt-2'>
      <div class='row'>
        <div class='col-lg-6'>
          <b>Body</b>
          <div class='card card-body'><pre id='bodyAuth'></pre></div>
        </div>

        <div class='col-lg-6'>
          <b>Response </b><span class='text-muted'>(200 OK)</span>
          <div class='collapse' id='sampleAuth'>
            <div class='card card-body'>
              <pre id='displayAuth'></pre>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>